{
    "manifest_version": 3,
    "name": "Notion Minder",
    "version": "1.0",
    "description": "An offline-first reminder and journaling assistant for Notion.",
    "permissions": [
      "storage",
      "tabs",
      "notifications",
      "alarms"
    ],
    "host_permissions": [
      "https://api.notion.com/"
    ],
    "background": {
      "service_worker": "service-worker.js"
    },
    "action": {
      "default_popup": "index.html"
    },
    "options_page": "options.html",
     "icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }